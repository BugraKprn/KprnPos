@model Entity.Layer.Concrete.Product

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Ürün Ekle</h4>
                <h6></h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    @using (Html.BeginForm("Add", "Product", FormMethod.Post))
                    {
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Ad</label>
                                <input type="text" name="ProductName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Fiyat</label>
                                <input type="text" name="ProductPrice">
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Kategori Adı</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control"})
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea class="form-control" name="ProductDescription"></textarea>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Sıra</label>
                                <input type="text" name="ProductOrder">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Durum</label>
                                    @Html.DropDownListFor(x => x.ProductStatus, new List<SelectListItem>
                                { new SelectListItem{Text="Aktif", Value="True"},
                                new SelectListItem{Text="Deaktif", Value="False"}}, new { @class = "form-control"} )
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Görsel</label>
                                <div class="image-upload">
                                    <input type="file" name="ProductImage">
                                    <div class="image-uploads">
                                        <img src="~/Pos/assets/img/icons/upload.svg" alt="img">
                                        <h4>Dosya yüklemek için sürükleyin ve bırakın</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button class="btn btn-submit me-2" type="submit">Kaydet</button>
                            <a href="/Pos/Product" class="btn btn-cancel">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>



